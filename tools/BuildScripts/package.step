<?xml version="1.0" encoding="utf-8" ?>
<project name="the package step" default="go">
	<property name="nant.settings.currentframework" value="net-3.5" />
	
	
	<target name="go" depends="zip" description="starting the packaging"/>


	
	<target name="zip">
	    <delete failonerror="false">
			<fileset>
				<include name="*.zip" />
			</fileset>
		</delete>
		<echo message="Zipping ${dirs.build}" />
		<zip zipfile="${dirs.root}\topshelf-r${version.rev}.zip">
			<fileset basedir="${dirs.build}">
				<include name="**/*" />
			</fileset>
		</zip>
	</target>

	<!-- sensible defaults -->
	<property name="dirs.root" value="..\..\.." overwrite="false" />
	<property name="dirs.build" value="${dirs.root}\bin" overwrite="false" />
	<property name="version.rev" value="222" overwrite="false" />
</project>